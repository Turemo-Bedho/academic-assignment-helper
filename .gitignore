# Create/update .gitignore
cat > .gitignore << EOF
# Virtual environment
venv/
env/
.venv/

# Environment variables
.env
*.env

# Uploads directory
uploads/
backend/uploads/

# Python cache
__pycache__/
*.pyc
*.pyo
*.pyd

# Database
*.db
*.sqlite3

# IDE
.vscode/
.idea/

# OS
.DS_Store
Thumbs.db

# Logs
*.log

# n8n
workflows/.n8n/

# Docker
docker-compose.override.yml

# Temporary files
*.tmp
*.temp
EOF